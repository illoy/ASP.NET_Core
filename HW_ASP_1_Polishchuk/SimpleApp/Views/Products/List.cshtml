@model List<SimpleApp.Models.Product>

@{
    Layout = null; 
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
    <link href="~/styles.css" rel="stylesheet" />
</head>
<body>
    <h2>Список продуктов</h2>
    <table>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                
            @if (item.Count <= 0)
            {
                <td>
                    <b style="color:red ">нет в наличии</b>
                </td>
            }
            else if (item.Count <= 5)
            {  
                <td>
                    <b style="color:orange ">заканчивается</b>
                </td>
                <td>
                    <a href="/Products/Details/@item.Id">Подробнее...</a>
                </td>
            }
            else
            {
                <td> 
                    <b style="color:green ">в наличии</b>
                </td>
                <td>
                    <a href="/Products/Details/@item.Id">Подробнее...</a>
                </td>
            }
                </tr>
        }
    </table>
    @if (Model.Count != 0)
    {
        <p>
            Всього: @Model.Count
        </p>
    }
    else
    {
        <p>
            Список пуст.
        </p>
    }
</body>
</html>


